<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    android:background="@color/md_green_50"
    tools:context=".setting.SettingActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="28dp"
            app:cardCornerRadius="18sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingTop="30dp"
                android:paddingRight="40dp"
                android:paddingBottom="20sp">



                <EditText
                    android:text="admin"
                    android:layout_marginTop="25sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/label_setting_et_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_et"
                    android:hint="Admin"
                    android:padding="15dp" />

                <EditText

                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/label_setting_et_passwrod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_et"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="15dp" />

                <EditText
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:id="@+id/label_setting_et_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_et"
                    android:hint="Ej: 192.168.1.3:82"
                    android:padding="15dp" />

                <Button

                    android:id="@+id/label_setting_button_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/shape_button_login"
                    android:onClick="setOnClickAddListener"
                    android:text="Agregar Ip"
                    android:textAllCaps="false" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/label_setting_rv_ip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>









</ScrollView>